<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">


<struts>
    
    <constant name="struts.custom.i18n.resources" value="global"/>
    <constant name="struts.i18n.encoding" value="UTF-8" />
    
    <package name="defalut" extends="struts-default">
        
        <action name="lookTeacher" class="action.teacher.LookTeacherAction">
            <result name="success">/teacher/lookTeacher.jsp</result>
        </action>
        
        <action name="addTeacher" class="action.teacher.AddTeacherAction">
            <result name="success">/teacher/addTeacher.jsp</result>
        </action>
        
        <action name="findTeacher" class="action.teacher.FindTeacherAction">
            <result name="success">/teacher/updateTeacher.jsp</result>
        </action>
        
        <action name="deleteTeacher" class="action.teacher.DeleteTeacherAction">
            <result name="success">/teacher/lookTeacher.jsp</result>
        </action>
        
        <action name="updateTeacher" class="action.teacher.UpdateTeacherAction">
            <result name="success">/teacher/lookTeacher.jsp</result>
        </action>
        
    </package>
</struts>