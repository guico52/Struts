<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">


<struts>
    
    <constant name="struts.custom.i18n.resources" value="global"/>
    <constant name="struts.i18n.encoding" value="UTF-8" />
    

    
    <package name="defalut" extends="struts-default">
        <interceptors>
            <!--声明自定义拦截器-->
            <interceptor name="loginInterceptor" class="interceptor.LoginInterceptor"/>
            <!--声明连接器栈-->
            <interceptor-stack name="myDefault">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="loginInterceptor"/>
            </interceptor-stack>
        </interceptors>
        <!--登录Action-->
        <action name="login" class="action.LoginAction" method="execute">
            <result name="success">/success.jsp</result>
            <result name="error">/error.jsp</result>
        </action>
        

        <!--mainAction-->
        <action name="main" class="action.MainAction" method="execute">
            <interceptor-ref name="myDefault"/>
            <result name="login">login.action</result>
            <result name="success">/success.jsp</result>
        </action>
        <!--切换语言Action-->
        <action name="changelan" class="action.ChangelantAction">
            <result name="success">/index.jsp</result>
        </action>
    </package>
</struts>